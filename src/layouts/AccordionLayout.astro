---
import { Icon } from "astro-icon/components";
import BaseLayout from "./BaseLayout.astro";
const { title, icon } = Astro.props;
---

<BaseLayout>
  <div class="collapse collapse-arrow ease-in-out duration-300 mb-2">
    <input aria-label={title} type="checkbox" class="peer" />
    <div class="collapse-title font-extrabold tracking-tight text-lg sm:text-xl md:text-2xl p-4 sm:p-6">
      <div class="flex items-center">
        <Icon name={icon} class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 mr-3 sm:mr-4" />
        {title}
      </div>
    </div>
    <div class="collapse-content transition-all duration-300 ease-in-out">
      <div class="py-2 px-1 sm:px-2">
        <slot/>
      </div>
    </div>
  </div>
</BaseLayout>