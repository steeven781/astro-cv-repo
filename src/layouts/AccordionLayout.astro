---
import { Icon } from "astro-icon/components";
import BaseLayout from "./BaseLayout.astro";
const { title, icon } = Astro.props;
---

<BaseLayout>
  <div class="collapse collapse-arrow ease-in-out duration-300 mb-2 w-full max-w-full">
    <input aria-label={title} type="checkbox" class="peer" />
    <div class="collapse-title font-extrabold tracking-tight text-lg sm:text-xl md:text-2xl !pr-12 sm:!pr-16 min-w-0">
      <div class="flex items-center min-w-0">
        <Icon name={icon} class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 mr-2 sm:mr-3 md:mr-4 flex-shrink-0" />
        <span class="truncate">{title}</span>
      </div>
    </div>
    <div class="collapse-content transition-all duration-300 ease-in-out w-full max-w-full overflow-hidden">
      <div class="py-2 w-full max-w-full">
        <slot/>
      </div>
    </div>
  </div>
</BaseLayout>