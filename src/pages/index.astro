---
import "@fontsource-variable/dm-sans";
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Icon } from "astro-icon/components";
---

<html lang="gl">
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "black");
      } else {
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
      }
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.webp" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Steeven Medina CV</title>
  </head>
  <body class="flex flex-col min-h-screen max-w-full">
    <Header />
    <div
      class="flex items-center absolute top-4 right-4 z-10"
    >
      <Icon name="carbon:moon" class="w-4 h-4" />
      <input
        type="checkbox"
        data-toggle-theme="black,lofi"
        data-act-class="ACTIVECLASS"
        class="toggle toggle-sm mx-1 bg-secondary"
        checked
      />
      <Icon name="carbon:light" class="w-4 h-4" />
    </div>

    <div class="w-full px-4 sm:px-6 lg:px-8">
      <div class="divider mx-auto h-px max-w-3xl bg-secondary/50"></div>
    </div>
    <main class="flex-grow w-full px-4 sm:px-6 lg:px-8 py-2 overflow-y-auto">
      <div class="max-w-4xl mx-auto w-full">
        <Container />
      </div>
    </main>
    <Footer class="flex justify-center items-center py-4" />
  </body>
</html>

<style is:global>
  html, body {
    font-family: "DM Sans Variable", sans-serif;
    max-width: 100vw;
    overflow-x: hidden;
  }

  * {
    word-wrap: break-word;
    overflow-wrap: break-word;
    box-sizing: border-box;
  }

  .prose {
    max-width: 100% !important;
  }

  .prose p, .prose li, .prose td, .prose th {
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .badge {
    white-space: nowrap;
    user-select: none;
  }

  .overflow-y-scroll::-webkit-scrollbar {
    width: 3px;
  }

  .overflow-y-scroll::-webkit-scrollbar-thumb {
    background-color: oklch(var(--s));
  }

  .overflow-y-scroll {
    scrollbar-width: 1px;
  }
</style>
