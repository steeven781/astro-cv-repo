---
import { Icon } from "astro-icon/components";
const { timeframe, title, url, tags, url_name, location } =
  Astro.props;
---

<div class="card card-compact card-bordered border border-[oklch(var(--s))] w-full max-w-full hover:shadow-lg transition-all my-4">
  <div class="card-body p-4 sm:p-6 min-w-0">
    <div class="flex flex-col sm:flex-row justify-between gap-2 mb-3 min-w-0">
      <div class="flex-1 min-w-0">
        <h1 class="uppercase card-title font-extrabold tracking-tighter text-lg sm:text-xl md:text-2xl break-words">{title}</h1>
        {location && (
          <div class="flex items-center mt-1 sm:mt-2">
            <Icon name="carbon:location" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-1" />
            <p class="text-xs sm:text-sm font-light text-secondary">{location}</p>
          </div>
        )}
      </div>

      {timeframe && (
        <div class="badge w-max h-max text-xs sm:text-sm text-center badge-outline inline-block align-middle shadow-md font-mono self-start sm:self-center">
          {timeframe}
        </div>
      )}
    </div>

    <div class="w-full max-w-full min-w-0">
      <div class="w-full max-w-full min-w-0">
        <article class="prose prose-sm md:prose-base text-secondary break-words max-w-full">
          <slot name="description" />
        </article>
        {Array.isArray(tags) && (
          <div class="flex flex-wrap content-around gap-2 my-4">
            {tags.map((item) => (
              <span class="badge text-center inline-block align-middle w-max h-max text-sm  badge-outline shadow-md mb-1" :key={item}>{item}</span>
            ))}
          </div>
        )}
      </div>

      {url_name && (
        <div class="mt-3 text-right">
          {url !== "#" ? (
            <a href={url} target="_blank" class="link link-hover text-xs sm:text-sm inline-flex items-center">
              {url_name}
              <Icon name="carbon:link" class="w-3.5 h-3.5 sm:w-4 sm:h-4 ml-1" />
            </a>
          ) : (
            <span class="text-xs sm:text-sm">{url_name}</span>
          )}
        </div>
      )}
      </div>

    </div>
  </div>
</div>