---
const getYear = () => new Date().getFullYear().toString();
---

<footer class="relative flex justify-center items-center bg-transparent py-4">
  <p class="flex items-center text-center font-light text-sm text-secondary">
    &copy; {getYear()}
    <a target="_blank" class="link ml-1">Steeven Medina</a>
  </p>
  <img
    class="rounded-full w-4 h-4 ml-2 shadow-md border border-black"
    src="gl_flag_128x.png"
    alt="Galician Flag"
  />

  <button id="to-top-btn" class="btn btn-circle btn-outline fixed bottom-4 right-4 opacity-0 transition-opacity duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
    </svg>
  </button>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toTopBtn = document.getElementById('to-top-btn');

    if (toTopBtn) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 200) {
          toTopBtn.classList.add('opacity-100');
        } else {
          toTopBtn.classList.remove('opacity-100');
        }
      });

      toTopBtn.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  });
</script>
