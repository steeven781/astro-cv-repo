---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";

const about = await getCollection("about");
const aboutData = about[0].data;
---

<header class="mx-auto pt-6 pb-2 w-full">
  <div class="flex flex-col items-center gap-4 w-full max-w-2xl px-4 mx-auto">
    <div class="flex-shrink-0 w-40 h-40 rounded-full shadow-md overflow-hidden border-2 border-base-300">
      <img
        alt="avatar"
        src="/profile.webp"
        class="w-full h-full object-cover grayscale-[50] hover:grayscale-0 transition-all duration-300"
      />
    </div>
    <div class="text-center">
      <div class="flex flex-col sm:flex-row items-center gap-2">
        <h1 class="text-3xl font-extrabold tracking-tight">
          {aboutData.name}
        </h1>
        <div class="badge badge-outline text-sm font-light shadow-lg">
          {aboutData.pronouns}
        </div>
      </div>
      <h2 class="text-lg mb-2 text-secondary mt-1">
        {aboutData.designation}
      </h2>
      <div class="flex items-center justify-center mt-1">
        <Icon name="carbon:location" class="w-4 h-4 mr-1" />
        <p class="text-sm text-secondary">{aboutData.location}</p>
      </div>
    </div>
  </div>
</header>
